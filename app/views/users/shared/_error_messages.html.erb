<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="space-y-2 mb-4">
    <ul class="list-disc list-inside text-sm text-red-600 pl-4">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
