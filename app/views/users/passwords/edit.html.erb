<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content w-full max-w-md mx-auto flex-col lg:flex-row-reverse">
    <div class="card bg-base-100 w-full max-w-sm shrink-0 shadow-2xl">
      <div class="card-body">        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <%= f.hidden_field :reset_password_token %>

          <fieldset class="fieldset space-y-4">

            <div>
              <label class="label">
                <span class="label-text">新しいパスワード（<%= @minimum_password_length %>文字以上で入力してください）</span>
              </label>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
            </div>

            <div>
              <label class="label">
                <span class="label-text">新しいパスワード（確認）</span>
              </label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
            </div>

            <div class="mt-4">
              <%= f.submit "パスワードを変更する", class: "btn btn-neutral w-full" %>
            </div>

          </fieldset>
        <% end %>

        <div class="mt-4">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

